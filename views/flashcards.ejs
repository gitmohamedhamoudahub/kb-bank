<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>KB-BANK</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        <div class="PageContainer">
            <a id="btnMenuAdmin" href="/admin">Admin</a>
            <div id="navBarMenu">
                <% const navigationLinks = [{text: 'Home', href: '/admin'},{text: 'Flash Cards', href: 'flashcards'},{text: 'Quiz Park', href: 'quiz'}, {text: 'Facts Checker', href: 'admin/fact'}]; %>
                <% navigationLinks.forEach((lnk) => { %>
                    <a id="btnMenu" href="<%= lnk.href %>"><%= lnk.text %></a>
                <% }); %>
                
            </div>
            <h1 class="title">Welcome to KB-BANK <h1>
            <h1>All Flash Cards</h1>
            
            <ul>
                <% flashcards.forEach(card=> { %>
                    <div class="questionSection">
                        <!-- <a href="/flashcards/<%= card._id %>"> -->
                           <div class="questionHeader"> <%= card.category + ' - ' + card.question %></div>
                            <div class="questionAnswer"><%= card.answer %></div>
                            
                        <!-- </a> -->
                    </div>
                    <% }); %>
            </ul>
            </div>
        
        </div>

        <script>
            document.querySelectorAll('#btnMenu').forEach(button => {
                button.addEventListener('click', function() {
                    console.log(button.textContent);
                });
            });
        </script>
    </body>
</html>
